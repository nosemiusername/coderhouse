<%- include('layouts/index'); -%>
    <div class="container" id="form-container">
        <h2>Ingrese Producto</h2>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card" style="border-radius: 2rem;">
                    <div class="card-body p-5 text-center">
                        <div class="my-md-5 pb-5">
                            <form id="form-product" onsubmit="return addProduct()">
                                <input type="hidden" name="form" value="1">
                                <div class="form-group">
                                    <input id="title" class="form-control" id="title" name="title" type="text"
                                        placeholder="ingrese nombre del producto" required/>
                                </div>
                                <div class="form-group">
                                    <input id="price" class="form-control" id="price" name="price" type="number"
                                        placeholder="ingrese precio" required/>
                                </div>
                                <div class="form-group">
                                    <input id="thumbnail" class="form-control" id="thumbnail" name="thumbnail"
                                        type="url" placeholder="ingrese url" required/>
                                </div>
                                <button type="submit" class="btn btn-primary btn-block"
                                    id="btn-add-product">Enviar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr>
    <div class="container" id="div-table-container"></div>
    <hr>
    <div class="container" id="div-chat-container">
        <h2>Chat</h2>
        <form id="form-chat" onsubmit="return addChat()">
            <label for="nickname">
                <div class="form-group">
                    <input type="email" name="email" id="email" required>
                </div>
                <div id="div-chat-list"></div>
                <div class="form-group">
                    <input type="text" name="message" id="message" placeholder="Ingrese un mensaje..." minlength="1" required>
                </div>
                <button type="submit" id="btn-add-chat" class="btn btn-primary btn-success">Enviar!</button>
            </label>
        </form>
    </div>
    <script src="/index.js"></script>
    <%- include('layouts/footer'); -%>