<%- include('layouts/index'); -%>
    <div class="container" id="form-container">
        <h2>Register</h2>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card" style="border-radius: 2rem;">
                    <div class="card-body p-5 text-center">
                        <div class="my-md-5 pb-5">
                            <form id="form-login" action="/save" method="POST">
                                <div class="form-group">
                                    <label for="user" style="display:block;text-align:left;">User</label>
                                    <input class="form-control" id="user" name="user" type="text"/>
                                </div>
                                <div class="form-group">
                                    <label for="name" style="display:block;text-align:left;">Nombre</label>
                                    <input class="form-control" id="name" name="name" type="text"/>
                                </div>
                                <div class="form-group">
                                    <label for="pass" style="display:block;text-align:left;">Password</label>
                                    <input class="form-control" id="pass" name="pass" type="password" />
                                </div>
                                <button type="submit" class="btn btn-primary btn-block"
                                    id="btn-add-product">Enviar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container" id="div-table-container">
    </div>
    <%- include('layouts/footer'); -%>