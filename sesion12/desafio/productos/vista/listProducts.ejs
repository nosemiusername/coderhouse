<%- include('layouts/index'); -%>
    <div class="container">

        <h1>Vista de Productos</h1>
        <% if (hasProducts) { %>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>foto</th>
                    </tr>
                </thead>
                <tbody>
                    <% listProducts.forEach( element=> { %>
                        <tr>
                            <td>
                                <%= element.title %>
                            </td>
                            <td>
                                <%= element.price %>
                            </td>
                            <td><img src=<%=element.thumbnail %> alt=<%= element.thumbnail %> width="24" height="24">
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <% } else {%>
                <div class="alert alert-warning" role="alert">
                    No hay productos
                </div>
                <% } %>
    </div>
<%- include('layouts/footer'); -%>