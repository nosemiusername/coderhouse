<%- include('layouts/index'); -%>
    <div class="container" id="form-container">
        <h2>Agregar Productos</h2>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card" style="border-radius: 2rem;">
                    <div class="card-body p-5 text-center">
                        <div class="my-md-5 pb-5">
                            <form id="form-product">
                                <input type="hidden" name="form" value="1">
                                <div class="form-group">
                                    <input id="title" class="form-control" id="title" name="title" type="text"
                                        placeholder="ingrese nombre del producto" />
                                </div>
                                <div class="form-group">
                                    <input id="price" class="form-control" id="price" name="price" type="text"
                                        placeholder="ingrese precio" />
                                </div>
                                <div class="form-group">
                                    <input id="thumbnail" class="form-control" id="thumbnail" name="thumbnail"
                                        type="text" placeholder="ingrese url" />
                                </div>
                                <button type="submit" class="btn btn-primary btn-block" id="btn-add-product">Crear
                                    Producto</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container" id="table-container">
        <h2>Listado de Productos</h2>
        <% if (hasProducts) { %>
            <table class="table table-hover" id="table-products">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Precio</th>
                        <th>foto</th>
                    </tr>
                </thead>
                <tbody>
                    <% listProducts.forEach( element=> { %>
                        <tr>
                            <td>
                                <%= element.title %>
                            </td>
                            <td>
                                <%= element.price %>
                            </td>
                            <td><img src=<%=element.thumbnail %> alt=<%= element.thumbnail %> width="24" height="24">
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <% } else {%>
                <div class="alert alert-warning" role="alert">
                    No hay productos
                </div>
                <% } %>
    </div>
    <script src="/index.js"></script>
    <%- include('layouts/footer'); -%>