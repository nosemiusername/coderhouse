        <div id="shoppingCart" class="col-md-5 col-lg-4 order-md-last">
        </div>
        <div class="col-md-7 col-lg-8">
          <h4 class="mb-3">Productos disponibles</h4>
          <div id="productList" class="my-3">
          </div>
        </div>
