<%- include('layouts/index'); -%>
    <div class="container" id="form-container">
        <h2>Login</h2>
        <div class="row justify-content-center">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card" style="border-radius: 2rem;">
                    <div class="card-body p-5 text-center">
                        <div class="my-md-5 pb-5">
                            <form id="form-login" action="/login" method="POST">
                                <div class="form-group">
                                    <label for="username" style="display:block;text-align:left;">Name</label>
                                    <input id="username" class="form-control" name="username" type="text"/>
                                </div>
                                <div class="form-group">
                                    <label for="password" style="display:block;text-align:left;">Password</label>
                                    <input id="password" class="form-control" name="password" type="password" />
                                </div>
                                <button type="submit" class="btn btn-primary btn-block"
                                    id="btn-register">Enviar</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container" id="div-table-container">
    </div>
    <%- include('layouts/footer'); -%>